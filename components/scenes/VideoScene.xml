<component name="VideoScene" extends="Scene">
  <children>
    <RegistryTask id="RegistryTask"/>

    <Rectangle
      color="#DFDFDF"
      width="1920"
      height="1080"
      opacity=".6"
      translation="[0,0]" />

    <Overhang
      showClock="true"
      clockColor="0x111111"
      logoUri="pkg:/images/Overhang_Logo_HD.png"
      backgroundUri="pkg:/images/Overhang_Background_SD.png"/>

    <HomeScreen
      id="HomeScreen"
      visible="false"/>

    <CategoryScreen
      id="CategoryScreen"
      visible="false"/>

    <SpringBoard
      id="SpringBoard"
      visible="false"/>

    <Dialog
      id="Warning"
      visible="false" />

  </children>

  <interface>
    <field id="homeRowItemSelected" type="intarray" alias="HomeScreen.rowItemSelected" onChange="onRowItemSelected"/>
    <field id="cateRowItemSelected" type="intarray" alias="CategoryScreen.rowItemSelected" onChange="onCategoryItemSelected"/>
    <field id="category" type="string" />
  </interface>

  <script type="text/brightscript" uri="pkg:/source/utils/SGHelperFunctions.brs"/>
  <script type="text/brightscript" uri="pkg:/components/scenes/VideoScene.brs"/>
</component>
